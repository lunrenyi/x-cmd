
___x_cmd_mac_ss_attr(){
    [ $# -gt 0 ] || set -- --help
    case "$1" in
        -h|--help)  ___x_cmd help -m mac ss attr ;;
        *)          ___x_cmd_mac_ss_attr_ "$@"   ;;
    esac
}

___x_cmd_mac_ss_attr_(){
    local feature="$1";         shift

    local fname="$feature"
    local valuetype="onoff"

    case "$feature" in
        networktime)            fname="usingnetworktime"    ;;
        wakeon-net)             fname="wakeonnetworkaccess" ;;
        wakeon-modem)           fname="wakeonmodem"         ;;
        restart-freeze)         fname="restartfreeze"       ;;
        restart-powerfailure)   fname="restartpowerfailure" ;;
        remote-login)           fname="remotelogin"         ;;
        remote-apple-events)    fname="remoteappleevents"   ;;
        allow-power-button-to-sleep-computer)
                                fname="allowpowerbuttontosleepcomputer" ;;

        date)                   valuetype="mm:dd:yy"        ;;
        time)                   valuetype="hh:mm:ss"        ;;
        timezones)              valuetype="timezone"        ;;
        networktimeserver)      valuetype="timeserver"      ;;
        sleep|computersleep|displaysleep|harddisksleep)
                                valuetype="minutes"         ;;
        computername)           valuetype="computername"    ;;

        startup-disk)           fname="startupdisk"
                                valuetype="path"                ;;
        disable-keyboard-when-enclosure-lock-isengaged)
                                fname="disablekeyboardwhenenclosurelockisengaged"
                                valuetype="yesno"               ;;
        wait-for-startup-after-power-failure)
                                fname="waitforstartupafterpowerfailure"
                                valuetype="value"               ;;
        kernel-boot-architecture-setting)
                                fname="kernelbootarchitecturesetting"
                                valuetype="i386x86_64default"   ;;
        *) N=mac M="Unknown subcmd -> $feature" log:ret:64      ;;
    esac

    mac:debug --fname "$fname" --valuetype "$valuetype" "sudo systemsetup"
    if [ $# -eq 0 ]; then
        ___x_cmd sudo systemsetup -get"$fname"
    else
        ___x_cmd sudo systemsetup -set"$fname" "$1"
    fi
}
