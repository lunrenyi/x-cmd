
___x_cmd_dos2unix___dos2mac(){
    while [ $# -gt 0 ]; do
        case "$1" in
            -h|--help)      ___x_cmd help -m dos2unix --dos2mac ; return ;;
        esac
        break
    done

    local input="${1:-/dev/stdin}"
    local output="${2:-/dev/stdout}"
    {
        ___x_cmd_dos2unix___dos2unix | ___x_cmd_dos2unix___unix2mac
    } <"$input" >"$output"
}
