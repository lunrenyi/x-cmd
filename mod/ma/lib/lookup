
___x_cmd_ma_lookup(){
    local address="${1:?Provide mac address}"
    if ___x_cmd_is_stdout2tty; then
        ___x_cmd_ma_lookup___cache | ___x_cmd jo
    else
        ___x_cmd_ma_lookup___cache
    fi
}

___x_cmd_ma_lookup___cache(){
    ___x_cmd ccmd 1d -- ___x_cmd curl --fail --max-time 10 -s "https://api.maclookup.app/v2/macs/$address"
}

