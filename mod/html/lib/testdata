
___x_cmd_html_testdata(){
    [ $# -gt 0 ] || set -- 301

    local op="$1";  shift
    case "$op" in
        -h|--help)  ___x_cmd help -m html testdata      "$@" ;;
        get)        ___x_cmd_html_testdata_get          "$@" ;;
        ls)         ___x_cmd_html_testdata_ls           "$@" ;;
        *)          ___x_cmd_html_testdata_get "$op"    "$@" ;;
    esac
}

___x_cmd_html_testdata_get(){
    local p="${1:-301}";    p="${p#/}"
    ___x_cmd ccmd 1d -- ___x_cmd httpget gitx x-cmd json-test-data main "html/${p%.html}".html
}

___x_cmd_html_testdata_ls(){
    ___x_cmd ccmd 10m -- ___x_cmd httpget gitx x-cmd json-test-data main "html/_index"
}
