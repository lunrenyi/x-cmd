
# Inner function ...
___x_cmd_html_clean(){

    # clean up script
    # clean up base64
    # clean up style
    # clean up meta
    # clean up link
    # clean up comment

    if [ $# -eq 0 ]; then
        ___x_cmd_html_clean___pipe
    else
        [ -r "$1" ] || N=readerlm M="Unreadable file -> $1" log:ret:1
        ___x_cmd_html_clean___pipe <"$1"
    fi
}

___x_cmd_html_clean___pipe(){
    ___x_cmd deno "${___X_CMD_ROOT_MOD}/html/lib/deno/clean.ts"
}

