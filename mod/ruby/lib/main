# shellcheck shell=dash

xrc:mod:lib     ruby   __runcmd

___x_cmd_ruby___main(){
    [ "$#" -gt 0 ] ||   set -- --help

    local op="$1";      shift
    case "$op" in
        -h|--help)      ___x_cmd help -m ruby "$@";     return 0 ;;

        --|--runmain)   ___x_cmd_ruby___runmain         "$@" ;;
        *)              ___x_cmd_ruby___runmain "$op"   "$@" ;;
    esac
}
