
___x_cmd_ruby___runmain(){
    ___x_cmd_ruby___runcmd "$@"
}

___x_cmd_ruby___runcmd(){
    if ___x_cmd_hascmd ruby; then
        ___x_cmd_ruby___runcmd(){  ___x_cmd_cmds ruby "$@"; }
    else
        ___x_cmd_ruby___install || return
        ___x_cmd_ruby___runcmd(){ "$___X_CMD_RUBY_BIN_PATH/$___X_CMD_RUBY_BIN" "$@" ; }
    fi || return
    ___x_cmd_ruby___runcmd "$@"
}

___x_cmd_ruby___install(){
    x:info "Please install Ruby."
    x install ruby 2>/dev/null || return 1
}