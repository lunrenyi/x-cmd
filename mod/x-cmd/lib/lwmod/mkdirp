
___x_cmd_mkdirp(){
    if [ "$#" -eq 0 ]; then
        local srcdir; while read -r srcdir; do
            [ -d "${srcdir}" ]  || ___x_cmd_cmds_mkdir -p "$srcdir"   || return 1
        done
    else
        while [ $# -gt 0 ]; do
            [ -d "${1}" ] || {
                ___x_cmd_cmds_mkdir -p "$@" || return 1
                return
            }
            shift
        done
    fi
}
