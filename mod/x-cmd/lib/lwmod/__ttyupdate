

# Bash 3 case is wired, please consult tty module.
case "$___X_CMD_SHELL" in
    dash|ash)
        ___x_cmd___ttyupdate(){
            ___x_cmd __ttyupdateforce
        }
    ;;
    *)  ___x_cmd___ttyupdate(){
            [ -n "$LINES" ] || {
                # ___x_cmd_compat_syncfs /dev/tty
                ___x_cmd __ttyupdateforce
                # x:info "Triggered -> $LINES $COLUMNS"
            }
        }
esac

