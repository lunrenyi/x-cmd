
___x_cmd___ttyupdateforce(){
    if ___x_cmd_compat_syncfs /dev/tty 2>/dev/null; then
        ___x_cmd___ttyupdateforce(){
            local IFS=" "
            read -r LINES COLUMNS <<A
$(command stty size </dev/tty 2>/dev/null)
A
    }
    else
        ___x_cmd___ttyupdateforce(){
            :
        }
    fi && ___x_cmd___ttyupdateforce "$@"
}
