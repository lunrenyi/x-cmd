
# This is very important... Widely used in docker and git intercept

___x_cmd_cmdstr(){
    local varname="$1";     shift

    local t; eval t="\"\${$varname}\""
    local i; local x_=
    for i in "$@"; do
        x_=; ___x_cmd_shq1_ "$i"
        t="$t $x_"
    done

    eval "$varname"=\"\$t\"
}
