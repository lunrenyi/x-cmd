
___x_cmd_runfile(){
    local filepath="${1:?Please provide filepath}";        shift 1
    case "$filepath" in
        *.dash|*.bash|*.sh|*.zsh|*.fish|*.xonsh|*.elv|*.nu|\
        *.py|*.mojo|*.jl|*.hy|\
        *.pl|*.raku|*.rakumod|*.rb|\
        *.lua|\
        *.js|*.ts|\
        *.go|*.zig|*.c|*.cpp|*.el|*.lisp)
            ___x_cmd solo run   "$filepath" "$@"
            ;;
        *)
            ___x_cmd_source     "$filepath" "$@"
    esac
}
