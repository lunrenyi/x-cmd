
___x_cmd_perl_tidy(){
    ___x_cmd_perl_load || return

    if ! ___x_cmd_hascmd perltidy; then
        ___x_cmd_perl___cmd cpan install Perl::Tidy || {
            x:error "Installation failed. Exit."
        }
    fi

    ___x_cmd_perl_tidy(){
        command perltidy "$@"
    }

    ___x_cmd_perl_tidy "$@"
}

