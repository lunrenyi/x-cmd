
___x_cmd_gpg_key_show(){

    while [ $# -gt 0 ]; do
        case "$1" in
            -h|--help)      ___x_cmd help -m gpg key show "$@" ;;
            *)              break
        esac
    done

    local keyid="$(___x_cmd gpg key id "${1}" )"

    if [ -n "$keyid" ]; then
        gpg --export --armor "$keyid"
    else
        gpg --export --armor
    fi
}
