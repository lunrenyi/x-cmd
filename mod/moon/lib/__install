
___x_cmd_moon___install(){
    local x_
    ___x_cmd os name_

    case "$x_" in
        darwin|linux)
            ___x_cmd curl -fsSL https://cli.moonbitlang.com/install/unix.sh | bash
            ;;

        win)
            ___x_cmd pwsh -ExecutionPolicy RemoteSigned -NoProfile -Command '$env:Path = [Environment]::GetEnvironmentVariable("PATH", "User");  Set-ExecutionPolicy RemoteSigned -Scope CurrentUser; irm https://cli.moonbitlang.com/install/powershell.ps1 | iex'
            ;;

        *)
            moon:error "Unsupport platform -> $x_"
            ;;
    esac
}

