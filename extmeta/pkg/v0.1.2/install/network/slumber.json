{
  "lang": "Rust",
  "homepage": "https://github.com/LucasPickering/slumber",
  "desc": {
    "cn": "Slumber 是一个基于终端的用户界面（TUI）HTTP 客户端。",
    "en": "Slumber is a TUI (terminal user interface) HTTP client."
  },
  "rule": {
    "/curl": {
      "cmd": "curl --proto '=https' --tlsv1.2 -LsSf https://github.com/LucasPickering/slumber/releases/download/v2.5.0/slumber-installer.sh | sh",
      "reference": "https://slumber.lucaspickering.me/artifacts/"
    },
    "/brew": {
      "cmd": "brew install slumber",
      "reference": "https://formulae.brew.sh/formula/slumber#default"
    },
    "/cargo": {
      "cmd": "cargo install slumber --locked",
      "reference": "https://slumber.lucaspickering.me/artifacts/"
    },
    "(win|wsl2)/powershell": {
      "cmd": "powershell -c \"irm https://github.com/LucasPickering/slumber/releases/download/v2.5.0/slumber-installer.ps1 | iex\"",
      "reference": "https://slumber.lucaspickering.me/artifacts/"
    },
    "arch/pacman": {
      "cmd": "pacman -S \tslumber",
      "reference": "https://archlinux.org/packages/extra/x86_64/slumber/"
    },
    "/nix-shell": {
      "cmd": "nix-shell -p slumber",
      "reference": "https://search.nixos.org/packages?query=slumber"
    }
  }
}
