{
  "lang": "Rust",
  "homepage": "https://github.com/cjbassi/ytop",
  "desc": {
    "cn": "一个用 Rust 编写的 TUI 系统监视器。",
    "en": "A TUI system monitor written in Rust"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install ytop",
      "reference": "https://github.com/cjbassi/ytop?tab=readme-ov-file#from-source"
    },
    "darwin/brew": {
      "cmd": "brew tap cjbassi/ytop && \\\nbrew install ytop\n",
      "reference": "https://github.com/cjbassi/ytop?tab=readme-ov-file#homebrew"
    },
    "arch/yay": {
      "cmd": "yay -S ytop",
      "reference": "https://github.com/cjbassi/ytop?tab=readme-ov-file#aur"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf copr enable atim/ytop -y && \\\nsudo dnf install ytop\n",
      "reference": "https://github.com/cjbassi/ytop?tab=readme-ov-file#copr"
    }
  }
}
