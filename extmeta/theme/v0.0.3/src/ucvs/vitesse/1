case "$___X_CMD_THEME_TERM_COLORTYPE" in
    true)
        theme:color "#87d787" "#a14f55"
        # username
        XTW_username_style_name="rgbfg-#4d9375"
        XTW_username_style_ip="rgbfg-#a1b567"
