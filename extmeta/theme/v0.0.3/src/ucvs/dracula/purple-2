        # username
        XTW_username_style_name="fg-116"
        XTW_username_style_ip="fg-116"
        # cwd
        XTW_cwd_style="bold fg-055"
        # vcml
        XTW_vcml_style_right_label_clean="fg-116"
        XTW_vcml_style_right_label_dirty="fg-186"
        XTW_vcml_style_clean="fg-175"
        XTW_vcml_style_dirty="fg-175"
        XTW_vcml_prefix_style="fg-119"
        # symbol
        XTW_symbol_style_true="fg-119"
        XTW_symbol_style_false="fg-124"
        ;;
    *)
        theme:color magenta cyan
        # username
        XTW_username_style_name="cyan"
        XTW_username_style_ip="cyan"
        # cwd
        XTW_cwd_style="bold magenta"
        # vcml
        XTW_vcml_style_right_label_clean="cyan"
        XTW_vcml_style_right_label_dirty="yellow"
        XTW_vcml_style_clean="magenta"
        XTW_vcml_style_dirty="magenta"
        XTW_vcml_prefix_style="green"
        # symbol
        XTW_symbol_style_true="green"
        XTW_symbol_style_false="red"
        ;;
