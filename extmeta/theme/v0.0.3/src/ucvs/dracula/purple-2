        XTW_vcml_style_clean="rgbfg-#d787af"
        XTW_vcml_style_dirty="rgbfg-#d787af"
        XTW_vcml_prefix_style="rgbfg-#87ff5f"
        # symbol
        XTW_symbol_style_true="rgbfg-#87ff5f"
        XTW_symbol_style_false="rgbfg-#af0000"
