        # cwd
        XTW_cwd_style="fg-031"
        XTW_cwd_style_git="bold fg-031"
        # vcm
        XTW_vcm_style="fg-022"
        # symbol
        XTW_symbol_style_true="fg-031"
        XTW_symbol_style_false="fg-124"
        ;;
    *)
        theme:color blue red
        # hms
        XTW_hms_style_true="cyan"
        XTW_hms_style_false="cyan"
        # username
        XTW_username_style_name="yellow"
        XTW_username_disable_ssh=
