        XTW_username_style_ip="yellow"
        # cwd
        XTW_cwd_style="blue"
        XTW_cwd_style_git="bold blue"
        # vcm
        XTW_vcm_style="green"
        # symbol
        XTW_symbol_style_true="blue"
        XTW_symbol_style_false="red"
        ;;
esac
